# Test environment configuration for StorytellerPi
# This file is used for testing purposes only

# Required API keys (use test values)
GEMINI_API_KEY=test_gemini_key_for_testing_purposes_only
WAKE_WORD_MODEL_PATH=models/hey_elsa.onnx
WAKE_WORD_FRAMEWORK=openwakeword

# Optional services (use mock or test values)
GOOGLE_CREDENTIALS_JSON=credentials/test-google-creds.json
GOOGLE_PROJECT_ID=test-project
OPENAI_API_KEY=test_openai_key
ELEVENLABS_API_KEY=test_elevenlabs_key
ELEVENLABS_VOICE_ID=test_voice_id
PORCUPINE_ACCESS_KEY=test_porcupine_key

# Audio configuration
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024
AUDIO_INPUT_DEVICE=default
AUDIO_OUTPUT_DEVICE=default

# Service configuration
STT_PRIMARY_SERVICE=google
STT_LANGUAGE_CODE=en-US
STT_TIMEOUT=30.0
STT_MAX_AUDIO_LENGTH=60.0

LLM_SERVICE=gemini
LLM_MODEL=gemini-2.5-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_CHILD_SAFE_MODE=true
LLM_AGE_APPROPRIATE_CONTENT=5

TTS_SERVICE=elevenlabs
TTS_VOICE_STABILITY=0.75
TTS_VOICE_SIMILARITY_BOOST=0.75

# System configuration
INSTALL_DIR=/opt/storytellerpi
LOG_DIR=/opt/storytellerpi/logs
MODELS_DIR=/opt/storytellerpi/models
SERVICE_NAME=storytellerpi
LOG_LEVEL=INFO

# Performance settings
MAX_MEMORY_USAGE=400
TARGET_RESPONSE_TIME=11.0

# Web interface
WEB_ENABLED=true
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_SECRET_KEY=test_secret_key

# Audio feedback
AUDIO_FEEDBACK_ENABLED=true
AUDIO_FEEDBACK_VOLUME=0.3

# Testing flags
MOCK_SERVICES=true
ENABLE_TESTING=true